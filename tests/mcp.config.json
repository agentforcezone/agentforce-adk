{
  "mcpServers": {
    "filesystem": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-filesystem", "/tmp/mcp-test"],
      "env": {
        "DEBUG": "false"
      }
    },
    "git": {
      "command": "node",
      "args": ["git-server.js"],
      "env": {
        "GIT_REPO_PATH": "${HOME}/projects"
      },
      "workingDirectory": "/opt/git-mcp",
      "timeout": 10000
    }
  }
}