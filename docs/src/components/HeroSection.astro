---
interface Props {
  title: string;
  tagline: string;
  image?: string;
}

const { title, tagline, image } = Astro.props;
---

<div class="hero-section">
  <div class="content-wrapper">
    <h1 class="title">{title}</h1>
    <p class="tagline">{tagline}</p>
    <div class="cta-buttons">
      <a href="/getting-started/introduction" class="cta-button primary">
        Get Started
      </a>
      <a href="https://github.com/agentforcezone/agentforce-adk" target="_blank" rel="noopener" class="cta-button secondary">
        <span class="icon">
          <svg viewBox="0 0 24 24" aria-hidden="true">
            <path fill="currentColor" d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"></path>
          </svg>
        </span>
        GitHub
      </a>
    </div>
  </div>
  {image && <div class="hero-image"><img src={image} alt="AgentForce ADK illustration" /></div>}
</div>

<style>
  .hero-section {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    padding-bottom: 4rem;
    margin-top: 1rem;
    margin-bottom: 4rem;
    margin-left: 10rem;
    margin-right: 10rem;
    background: linear-gradient(to top, #0f2027, #203a43, #2c5364);
    color: white;
    position: relative;
    overflow: hidden;
    border-radius: .5rem;
  }

  .content-wrapper {
    max-width: 65ch;
    margin: 0 auto;
    position: relative;
    z-index: 10;
  }

  .title {
    font-size: 3.5rem;
    line-height: 1.1;
    font-weight: 800;
    margin: 0;
    background: linear-gradient(to right, #38ea35, #9cff57);
    -webkit-background-clip: text;
    background-clip: text;
    color: transparent;
  }

  .tagline {
    font-size: 1.5rem;
    max-width: 50ch;
    margin: 1.5rem auto 2.5rem;
    color: rgba(255, 255, 255, 0.9);
    font-weight: 400;
    line-height: 1.4;
  }

  .cta-buttons {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  .cta-button {
    display: inline-flex;
    align-items: center;
    padding: 0.75rem 1.5rem;
    border-radius: 0.5rem;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.15s ease-in-out;
    border: 2px solid transparent;
  }

  .cta-button.primary {
    background-color: var(--sl-color-primary);
    color: #000;
  }

  .cta-button.primary:hover {
    background-color: #2dd12a;
    transform: translateY(-2px);
    box-shadow: 0 5px 15px rgba(56, 234, 53, 0.4);
  }

  .cta-button.secondary {
    background-color: rgba(255, 255, 255, 0.1);
    color: white;
    border: 2px solid rgba(255, 255, 255, 0.2);
  }

  .cta-button.secondary:hover {
    background-color: rgba(255, 255, 255, 0.2);
    border-color: rgba(255, 255, 255, 0.3);
    transform: translateY(-2px);
  }

  .icon {
    display: inline-flex;
    width: 1.25rem;
    height: 1.25rem;
    margin-right: 0.5rem;
  }

  .hero-image {
    margin-top: 3rem;
    max-width: 100%;
    width: 500px;
  }

  .hero-image img {
    width: 100%;
    height: auto;
    border-radius: 0.75rem;
    box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
  }

  @media (max-width: 1024px) {
    .hero-section {
      padding: 3rem 1rem;
      margin-top: 0;
      margin-left: 0;
      margin-right: 0;
    }

    .title {
      font-size: 2.5rem;
    }

    .tagline {
      font-size: 1.2rem;
    }

    .cta-button {
      padding: 0.6rem 1.25rem;
      font-size: 0.95rem;
    }
  }
</style>
