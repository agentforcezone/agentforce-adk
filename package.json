{
  "name": "@agentforce/adk",
  "version": "0.9.0",
  "description": "AgentForce Agent Development Kit - A powerful framework for building AI agents and servers",
  "main": "./lib/mod.ts",
  "module": "./lib/mod.ts",
  "types": "./lib/mod.ts",
  "type": "module",
  "private": false,
  "exports": {
    ".": {
      "import": "./lib/mod.ts",
      "types": "./lib/mod.ts"
    }
  },
  "files": [
    "lib/**/*.ts",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "ai",
    "agent",
    "adk",
    "agentforce",
    "llm",
    "ollama",
    "typescript",
    "framework"
  ],
  "author": "AgentForce Zone",
  "license": "AgentForce License",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/agentforcezone/agentforce-adk.git"
  },
  "bugs": {
    "url": "https://github.com/agentforcezone/agentforce-adk/issues"
  },
  "homepage": "https://github.com/agentforcezone/agentforce-adk#readme",
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@eslint/compat": "1.3.1",
    "@types/bun": "1.2.19",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.2.1",
    "@typescript-eslint/eslint-plugin": "8.38.0",
    "@typescript-eslint/parser": "8.38.0",
    "eslint": "9.32.0",
    "jest": "^30.0.5",
    "jest-environment-node": "^30.0.5",
    "ts-jest": "^29.4.1"
  },
  "peerDependencies": {
    "typescript": "5.8.3"
  },
  "scripts": {
    "agent:integration": "bun run ./examples/agents/integration.ts",
    "agent:file": "bun run ./examples/agents/file.ts",
    "server:basic": "bun run ./examples/server/basic-server.ts",
    "test": "bun test",
    "test:cov": "bun test --coverage",
    "test:jest": "jest",
    "test:jest:watch": "jest --watch",
    "test:jest:cov": "jest --coverage",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "lint:check": "eslint . --ext .ts,.tsx --max-warnings 0"
  },
  "dependencies": {
    "@google/genai": "1.11.0",
    "handlebars": "4.7.8",
    "hono": "4.8.10",
    "ollama": "0.5.16",
    "openai": "5.10.2",
    "puppeteer": "^24.16.0",
    "puppeteer-extra": "^3.3.6",
    "puppeteer-extra-plugin-stealth": "^2.11.2"
  }
